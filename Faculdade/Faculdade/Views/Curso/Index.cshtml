
@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>

<div ng-app="MyApp" ng-controller="CursoController">

    <div class="col-md-2" style="left:90%;">
        
    </div>

    <div class="col-md-2" style="left:90%;">
        <button type="button" class="btn btn-default btn-lg" ng-click="pesquisarButton()">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </button>
    </div>

    <table class="table table-striped table-dark" ng-init="pesquisarButton()">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">botaoEditar</th>
                <th scope="col">botaoExcluir</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="x in pesquisar">
                <td>
                    <input type="text" style="width:10%" value="{{x.Id}}" disabled="disabled" />
                </td>
                <td>
                    <input type="text" style="width:100%" disabled="disabled" id="txtNome{{x.Id}}" value="{{x.Nome}}" />
                </td>
                <td>
                    <button type="button" ng-click="EnableDisableTxt($event, x.Id); HiddenBtn($event, x.Id)">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" id="btnPlus{{x.Id}}" hidden="hidden">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </button>
                </td>
                <td>
                    <button type="button" id="btnExcluir">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>


